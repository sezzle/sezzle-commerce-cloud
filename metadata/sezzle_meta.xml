<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="Order">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="SezzleExternalId">
                <display-name xml:lang="x-default">Sezzle External Id</display-name>
                <description xml:lang="x-default">Sezzle Charge ID</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>true</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="SezzlePaymentAction">
                <display-name xml:lang="x-default">Sezzle Payment Action</display-name>
                <description xml:lang="x-default">Defines by what action order was placed</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>true</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">AUTHORIZATION</display>
                        <value>AUTH</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">AUTHORIZATION + CAPTURE</display>
                        <value>CAPTURE</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="SezzleStatus">
                <display-name xml:lang="x-default">Sezzle Status</display-name>
                <description xml:lang="x-default">Sezzle status of a order</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>true</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">AUTHORIZED</display>
                        <value>AUTH</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">CAPTURED</display>
                        <value>CAPTURE</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">VOIDED</display>
                        <value>VOIDED</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">REFUNDED</display>
                        <value>REFUNDED</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="SezzleToken">
                <display-name xml:lang="x-default">Sezzle Checkout Token</display-name>
                <description xml:lang="x-default">Sezzle Checkout token</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>true</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Sezzle">
                <display-name xml:lang="x-default">Sezzle</display-name>
                <attribute attribute-id="SezzleExternalId"/>
                <attribute attribute-id="SezzlePaymentAction"/>
                <attribute attribute-id="SezzleToken"/>
                <attribute attribute-id="SezzleStatus"/>
            </attribute-group>
        </group-definitions>
    </type-extension>


    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="SezzleMode">
                <display-name xml:lang="x-default">Sezzle Mode</display-name>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <display xml:lang="x-default">Sandbox</display>
                        <value>sandbox</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Production</display>
                        <value>production</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="SezzleOnline">
                <display-name xml:lang="x-default">Sezzle Enabled</display-name>
                <description xml:lang="x-default">Turn on/off Sezzle integration</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="SezzlePaymentAction">
                <display-name xml:lang="x-default">Sezzle Payment Action</display-name>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <display xml:lang="x-default">AUTHORIZATION</display>
                        <value>AUTH</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">AUTHORIZATION + CAPTURE</display>
                        <value>CAPTURE</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="SezzlePrivateKey">
                <display-name xml:lang="x-default">Sezzle Private Key</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="SezzlePublicKey">
                <display-name xml:lang="x-default">Sezzle Public Key</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="SEZZLE_PAYMENT">
                <display-name xml:lang="x-default">Sezzle</display-name>
                <attribute attribute-id="SezzleOnline"/>
                <attribute attribute-id="SezzleMode"/>
                <attribute attribute-id="SezzlePublicKey"/>
                <attribute attribute-id="SezzlePrivateKey"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="OrderPaymentInstrument">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="sezzled">
                <display-name xml:lang="x-default">sezzled</display-name>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
    </type-extension>
</metadata>
